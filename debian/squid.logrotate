#
#	Logrotate fragment for squid.
#
/var/log/squid/*.log {
	daily
	compress
	delaycompress
	rotate 2
	missingok
	nocreate
	sharedscripts
	prerotate
		test ! -x /usr/sbin/sarg-reports || /usr/sbin/sarg-reports daily
	endscript
	postrotate
		test ! -e /run/squid/squid.pid || test ! -x /usr/sbin/squid || /usr/sbin/squid -k rotate
	endscript
}
